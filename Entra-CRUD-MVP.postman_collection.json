{
  "info": {
    "name": "Entra External ID - RN + Express/Mongo CRUD MVP",
    "_postman_id": "4d3c2a7b-60a8-4d53-9b12-0bfa0df8e3a1",
    "description": "Collection to test a protected CRUD API secured by Microsoft Entra External ID (customers). Includes OAuth 2.0 (Auth Code + PKCE) configuration.\n\nBefore using: add https://oauth.pstmn.io/v1/callback to your native/public client app registration redirect URIs and configure scopes on your API app. Then click 'Get New Access Token' in Postman.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "oauth2",
    "oauth2": [
      {
        "addTokenTo": "header",
        "grantType": "authorization_code",
        "authUrl": "{{AUTH_URL}}",
        "accessTokenUrl": "{{TOKEN_URL}}",
        "clientId": "{{CLIENT_ID}}",
        "clientSecret": "",
        "scope": "{{SCOPE}}",
        "redirect_uri": "https://oauth.pstmn.io/v1/callback",
        "state": "pkce-state",
        "client_authentication": "body",
        "pkce": true
      }
    ]
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:4000"
    },
    {
      "key": "AUTH_URL",
      "value": "https://{tenant-sub}.ciamlogin.com/{tenant-id}/oauth2/v2.0/authorize"
    },
    {
      "key": "TOKEN_URL",
      "value": "https://{tenant-sub}.ciamlogin.com/{tenant-id}/oauth2/v2.0/token"
    },
    {
      "key": "CLIENT_ID",
      "value": "YOUR_NATIVE_APP_CLIENT_ID"
    },
    {
      "key": "SCOPE",
      "value": "api://YOUR_API_APP_CLIENT_ID/Foods.Read api://YOUR_API_APP_CLIENT_ID/Foods.Write openid offline_access"
    },
    {
      "key": "TEST_FOOD_ID",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/healthz",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "healthz"
          ]
        }
      }
    },
    {
      "name": "List Foods",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/foods",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "foods"
          ]
        }
      }
    },
    {
      "name": "Create Food",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sample Apple\",\n  \"calories\": 95,\n  \"tags\": [\n    \"fruit\",\n    \"snack\"\n  ]\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/foods",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "foods"
          ]
        }
      }
    },
    {
      "name": "Get Food by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/foods/{{TEST_FOOD_ID}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "foods",
            "{{TEST_FOOD_ID}}"
          ]
        }
      }
    },
    {
      "name": "Update Food by ID",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Apple\",\n  \"calories\": 90,\n  \"tags\": [\n    \"fruit\",\n    \"updated\"\n  ]\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/foods/{{TEST_FOOD_ID}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "foods",
            "{{TEST_FOOD_ID}}"
          ]
        }
      }
    },
    {
      "name": "Delete Food by ID",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/foods/{{TEST_FOOD_ID}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "foods",
            "{{TEST_FOOD_ID}}"
          ]
        }
      }
    },
    {
      "name": "Seed Dummy Data",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/admin/seed",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "admin",
            "seed"
          ]
        }
      }
    }
  ]
